<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Card untuk Total Pengeluaran -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pengeluaran"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_view_total_pengeluaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textColor="?attr/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daftar Transaksi -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_transaksi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card_total"
            android:paddingHorizontal="8dp"
            tools:listitem="@layout/item_transaksi" />

        <!-- Tampilan jika daftar kosong -->
        <TextView
            android:id="@+id/text_view_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Belum ada transaksi."
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Tombol Tambah Transaksi -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorAccent"
        android:contentDescription="Tambah Transaksi Baru"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>